{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "cats", "description": "Not dogs" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "chloe1234",
          "body": "Text from the article...",
          "created_at": 1527695953341,
          "votes": 0,
          "comment_count": 0
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the specified article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "chloe1234",
        "body": "Text from the article...",
        "created_at": 1527695953341,
        "votes": 1,
        "comment_count": 0
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments/decrements votes for specified article and serves the updated article",
    "queries": [],
    "exampleRequest": {
      "body": { "inc_votes": 1 }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "chloe1234",
        "body": "Text from the article...",
        "created_at": 1527695953341,
        "votes": 2
      }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [{ "username": "chloe1234" }]
    }
  },
  "GET /api/users/:username": {
    "description": "serves the specified user",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "chloe1234",
        "name": "Chloe",
        "avatar_url": "www.image-url.co"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for the specified article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "article_id": 1,
          "comment_id": 1,
          "votes": 0,
          "created_at": 1527695953341,
          "author": "chloe1234",
          "body": "Text from the comment..."
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds comment to specified article and serves the new comment",
    "queries": [],
    "exampleRequest": {
      "body": { "username": "chloe1234", "body": "Text from the comment..." }
    },
    "exampleResponse": {
      "comment": {
        "article_id": 1,
        "comment_id": 1,
        "votes": 0,
        "created_at": 1527695953341,
        "author": "chloe1234",
        "body": "Text from the comment..."
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes specified comment and serves no response",
    "queries": [],
    "exampleResponse": {}
  }
}
